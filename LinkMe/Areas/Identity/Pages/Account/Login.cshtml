@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<form id="account" method="post" class="form-box">
    <div class="row justify-content-center">
        <h1 class="form-heading">@ViewData["Title"]</h1>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.Email" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Email" class="form-control h3" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.Password" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Password" class="form-control h3" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group input-box">
        <div class="checkbox">
            <label asp-for="Input.RememberMe" class="h4">
                <input asp-for="Input.RememberMe" class="login-checkbox" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <div class="row justify-content-center input-box">
        <button type="submit" class="btn btn-primary h3">Zaloguj się</button>
    </div>
    <p class="h4">
        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
