@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-box">
    <div class="row justify-content-center">
        <h1 class="form-heading">@ViewData["Title"]</h1>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row input-box">
        <label asp-for="Input.Firstname" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Firstname" class="form-control h3" />
            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.Lastname" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Lastname" class="form-control h3" />
            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.Email" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Email" class="form-control h3" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.Password" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.Password" class="form-control h3" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row input-box">
        <label asp-for="Input.ConfirmPassword" class="col-sm-4 col-form-label h3"></label>
        <div class="col-sm-8">
            <input asp-for="Input.ConfirmPassword" class="form-control h3" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row justify-content-center">
        <button type="submit" class="btn btn-primary h3">Zarejestruj się</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
